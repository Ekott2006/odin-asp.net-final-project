@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApp.Areas.Identity.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-sm-12   col-md-6">
        <section>
            <form id="account" method="post">
                <h2>Use an account to log in.</h2>
                <hr/>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="LoginRequest.Username" class="form-control" autocomplete="username"
                           aria-required="true" placeholder="name"/>
                    <label asp-for="LoginRequest.Username" class="form-label">Username</label>
                    <span asp-validation-for="LoginRequest.Username" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="LoginRequest.Password" class="form-control" autocomplete="current-password"
                           aria-required="true" placeholder="password"/>
                    <label asp-for="LoginRequest.Password" class="form-label">Password</label>
                    <span asp-validation-for="LoginRequest.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="LoginRequest.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="LoginRequest.RememberMe"/>
                        @Html.DisplayNameFor(m => m.LoginRequest.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="text-decoration: none">Register
                            as a new user</a>
                    </p>
                </div>
            </form>
            <div class="text-center my-4">
                <p class="h4">Or Login as a Guest</p>
                <div class="d-flex gap-4">
                    <form method="post" asp-page-handler="demo" class="w-full">
                        <input name="id" value="1" hidden="hidden"/>
                        <button class="btn btn-info btn-lg text-white w-full">Guest 1
                        </button>
                    </form>
                    <form method="post" asp-page-handler="demo" class="w-full">
                        <input name="id" value="2" hidden="hidden"/>
                        <button class="btn btn-info btn-lg text-white w-full">Guest 2
                        </button>
                    </form>
                </div>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
